{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es6",
    "module": "node16",
    "lib": [
      "esnext"
    ],
    "outDir": "dist",
    "esModuleInterop": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "strict": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": [
      "node",
      "jest"
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/types/*"
    ],
    "paths": {
      "@app/env": [
        "env.ts"
      ],
      "@app/context": [
        "context.ts"
      ],
      "@app/services/*": [
        "services/*"
      ],
      "@app/utils/*": [
        "utils/*"
      ],
      "@app/types": [
        "types/index.d.ts"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
